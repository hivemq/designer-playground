{
  "name": "designer-playground",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "setup": "./scripts/setup.sh",
    "dev": "./scripts/dev.sh",
    "dev:app": "vite",
    "dev:theme": "pnpm --filter @hivemq/ui-theme build:watch",
    "dev:library": "pnpm --filter @hivemq/ui-library build:watch",
    "build": "tsc && vite build",
    "build:web": "tsc && vite build --config vite.web.config.ts",
    "create-prs": "node scripts/create-prs.mjs",
    "install:toolkit": "cd packages/frontend-toolkit && ./install.sh --install",
    "lint:check": "biome check ./src",
    "lint:check:write": "biome check --write --unsafe ./src",
    "lint:format": "biome format ./src",
    "lint:format:write": "biome format --write ./src",
    "lint:all": "pnpm run lint:check && pnpm run lint:format",
    "test": "pnpm tsc && pnpm test:unit && pnpm test:component",
    "test:unit": "TZ=UTC TEST_SUITE=unit pnpm vitest run --coverage --outputFile.junit=./test-results/unit.xml",
    "test:unit:ci": "pnpm test:unit --reporter=dot --coverage.enabled=false",
    "test:unit:dev": "TZ=UTC TEST_SUITE=unit pnpm vitest --outputFile.junit=./test-results/junit.xml",
    "test:component": "TZ=UTC TEST_SUITE=component pnpm vitest run --coverage --outputFile.junit=./test-results/component.xml",
    "test:component:ci": "pnpm test:component --reporter=dot --coverage.enabled=false",
    "test:component:dev": "TZ=UTC TEST_SUITE=component pnpm vitest --outputFile.junit=./test-results/junit.xml",
    "preview": "vite preview"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.29.0",
    "@emotion/react": "^11.14.0",
    "@fontsource/raleway": "^5.2.6",
    "@fontsource/roboto": "^5.2.6",
    "@hivemq/ui-library": "workspace:*",
    "@hivemq/ui-theme": "workspace:*",
    "@tanstack/react-query": "^5.62.0",
    "@tanstack/react-router": "^1.93.0",
    "@tanstack/react-table": "^8.21.3",
    "@uidotdev/usehooks": "^2.4.1",
    "lucide-react": "^0.525.0",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.6",
    "@chakra-ui/cli": "^3.29.0",
    "@inquirer/prompts": "^5.0.0",
    "@tanstack/react-router-devtools": "^1.93.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.6.0",
    "chalk": "^5.3.0",
    "concurrently": "^8.2.2",
    "execa": "^8.0.0",
    "type-fest": "^4.41.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "happy-dom": ">=20.0.0",
      "node-domexception": "npm:empty-pkg@1.0.0"
    },
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
